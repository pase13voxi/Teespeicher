<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="coolpharaoh.tee.speicher.tea.timer">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTea"
            android:label="Tee erstellen/bearbeiten"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.MainActivity" />
        </activity>
        <activity
            android:name=".ShowTea"
            android:label="Information"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.MainActivity" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="Einstellungen"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.MainActivity" />
        </activity>
        <activity
            android:name=".About"
            android:label="About"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.MainActivity" />
        </activity>
        <activity
            android:name=".Contact"
            android:label="Contact"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.About" />
        </activity>
        <activity
            android:name=".Software"
            android:label="Software"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="coolpharaoh.tee.speicher.tea.timer.About" />
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name=".MediaService" />
        <service android:name=".CountDownService" />

    </application>

</manifest>