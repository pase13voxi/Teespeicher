<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coolpharaoh.tee.speicher.tea.timer.views.Contact">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <ImageView
        android:id="@+id/imageViewMyPicture"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:src="@drawable/picture"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/textViewAboutMe"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_about_me"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imageViewMyPicture"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textAppearanceGrey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/buttonSendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/email"
        android:text="@string/contact_email"
        android:background="@null"
        android:layout_below="@id/textViewAboutMe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textAllCaps="false"
        />


</RelativeLayout>
